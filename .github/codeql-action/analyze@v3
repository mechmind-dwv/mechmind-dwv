      - name: "ğŸ” VerificaciÃ³n de Seguridad"
        run: |
          if [[ "${{ github.actor }}" != "mechmind-dwv" ]]; then
            echo "::error::ğŸš¨ Intento de ejecuciÃ³n no autorizado"
