```xml
<!-- Ejemplo de contenido .drawio -->
<mxfile>
  <diagram name="Page-1">
    <mxGraphModel>
      <root>
        <mxCell id="0"/>
        <mxCell id="1" parent="0"/>
        <mxCell id="2" value="MechBot 2.0 Core" style="shape=hexagon" parent="1" vertex="1">
